<!-- snippets/custom-pagination [aa] -->

{%- comment %}
	@params
  target [string]: Section target used for section rendering
  pagination [obj]: Pagination object
{% endcomment -%}

{%- if paginate.pages > 1 -%}
  <div class="border border-black flex justify-center items-center p-5 pagination js-pagination text-xl animate animate-fadeIn"
       data-section="{{ target }}">
    {% capture next_arrow %}
      <span>
        <span class="sr-only">Next page</span>
        {% render 'icon', icon: 'arrow-right' %}
      </span>
    {% endcapture %}

    {% capture prev_arrow %}
      <span>
        <span class="sr-only">Previous page</span>
        {% render 'icon', icon: 'arrow-left' %}
      </span>
    {% endcapture %}

    {% unless paginate.previous.is_link %}
      <span class="prev opacity-30">{{ prev_arrow }}</span>
    {% endunless %}

    {{ paginate | default_pagination | replace: "Next &raquo;", next_arrow | replace: '&laquo; Previous', prev_arrow }}

    {% unless paginate.next.is_link %}
      <span class="next opacity-30">{{ next_arrow }}</span>
    {% endunless %}
  </div>
{%- endif -%}
