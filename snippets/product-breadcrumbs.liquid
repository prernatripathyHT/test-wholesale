<!-- snippets/product-breadcrumbs -->


{%- if collection != blank -%}
<nav aria-label="Breadcrumb" class="breadcrumb border-b border-black px-5 lg:px-12 py-2.5">
  <ul class="flex gap-4 lg:gap-5 items-center">
    <li class="uppercase tracking-wider relative font-medium underline"><a href="{{ collection.url }}">{{ collection.title }}</a></li>

    <span>{% render 'icon', icon: "arrow-right", class: 'w-5 h-5' %}</span>

    <li class="relative uppercase tracking-wider font-freight-sans font-medium">
      <span aria-current="page" class="relative z-[1]">{{ product.title }}</span>
    </li>
  </ul>
</nav>
{%- endif -%}
