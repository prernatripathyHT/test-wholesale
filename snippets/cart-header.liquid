<!-- snippets/cart-header [aa] -->


{% assign cart_count = cart.item_count %}

{% assign is_cart_page = false %}
{% if template.name == 'cart' %}
  {% assign is_cart_page = true %}
{% endif %}

<div class="js-slide-cart--header pt-4 cart-page:pt-6 px-4 pb-6 border-b border-black cart-page:border-0">
  {% unless is_cart_page %}
    <button type="button"
            name="close cart"
            class="js-cart--close btn-transparent absolute top-4 right-4 z-10">
      <span class="sr-only">Close Cart</span>
      {% render 'icon', icon: 'close' %}
    </button>
  {% endunless %}

  <div class="flex items-center justify-center mb-4">
    {% if is_cart_page %}
      <h1 class="font-couch text-3xl md:text-4xl text-blue">Cart</h1>
    {% else %}
      <span class="font-couch text-xl relative">
        Cart
        {%- if cart_count > 0 -%}
          <span class="absolute -right-6 -bottom-2
                       w-5 h-5 rounded-full pb-1
                     bg-black text-white text-sm font-freight-sans
                       flex items-center justify-center">{{ cart_count }}</span>
        {%- endif -%}
      </span>
    {% endif %}
  </div>
  
  {% render 'cart-shipping-indicator' %}

  {% if is_cart_page and cart.item_count > 0 %}
    <a  href="/collections"
        class="block mt-5 mx-auto text-base underline uppercase w-max">
        Continue Shopping
    </a>
  {% endif %}
</div>
