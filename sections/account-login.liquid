<!-- sections/account-login [ja] -->

<section class="w-full md:w-4/5 xl:w-2/3 mx-auto px-4 py-20">
    <div class="flex items-center mb-8 animate animate-fadeInUp">
        <h1 class="font-couch text-xl xs:text-2xl sm:text-4xl">Login</h1>

        <button class="btn-transparent btn-with-icon flex items-center ml-10 transition-all hover:text-blue text-base xs:text-lg sm:text-2xl"
                data-section-nav="account-register"
                data-section-nav--href="/account/register"
                data-section-nav--wrapper="#template-account"
                data-replace-history="true">
            <span class="mr-2">or sign up</span>
            {% render 'icon', icon: 'arrow-right' %}
        </button>
    </div>

    <div class="my-5 flex items-center gap-4 animate animate-fadeInUp">
      <p class="text-lg">Do You Have A Wholesale Account?</p>

      <a href="https://wholesale.counterculturecoffee.com/my-account"
         class="uppercase text-blue underline font-medium tracking-wider"
         target="_blank">
        Login Here
      </a>
    </div>

    {% form 'customer_login' %}
        <div    class="flex flex-col md:flex-row items-start gap-4 md:gap-6 animate animate-fadeIn"
                data-delay="200">
            {% render 'floating-label',
                id: 'login-email',
                input_name: 'customer[email]',
                input_val: form.email,
                placeholder: 'you@example.com',
                label: 'Email' %}

            <div class="w-full">
                {% render 'floating-label',
                    id: 'login-password',
                    input_type: 'password'
                    input_name: 'customer[password]',
                    placeholder: 'C0unt3rCultur3_Rul3z',
                    label: 'Password' %}

                <button class="btn-transparent flex justify-end mr-0 mx-auto mt-2.5 transition-all hover:text-blue text-sm"
                        type="button"
                        data-section-nav="account-forgot-password"
                        data-section-nav--wrapper="#template-account"
                        data-replace-history="true">
                  Forgot password?
                </button>
            </div>

            <button type="submit"
                    name="login"
                    class="btn btn-secondary btn-big w-full md:w-1/3"
                    data-delay="400">
                Login
            </button>
        </div>


        {%- if form.errors -%}
            <div id="login-msg" class="z-[100] fixed hidden items-center justify-center inset-0 w-full h-full bg-black/20 activated:flex activated">
                {% comment %} 
                <div class="mb-2.5">
                    {{ form.errors | default_errors }}
                </div> 
                {% endcomment %}

                <script type="text/javascript">
                    document.addEventListener("DOMContentLoaded", function() {
                        document.querySelector('#login-email').focus();
                    })
                </script>

                <div class="w-11/12 md:w-4/5 xl:w-2/3 mx-auto px-5 pt-20 pb-10 bg-white rounded-xl relative">
                    <button class="btn-transparent absolute top-5 right-5"
                            type="button"
                            data-toggle="#login-msg">
                        <span class="sr-only">Close popup</span>
                        {% render 'icon', icon: 'close', class: 'w-3 h-3' %}
                    </button>
                
                    <h3 class="font-gopher font-xl font-bold mb-2">If this is your first time logging into our new website? If so, please follow these steps.</h3>

                    <div class="mb-5 rte">
                        <p class="mb-1.5"><span class="font-medium">Step 1.</span> You must activate your account. If you ordered from us before and didn't receive an account activation email, please get in touch with us at <a href="mailto:retail@counterculturecoffee.com" target="_blank">retail@counterculturecoffee.com</a>, and we will make sure to send it your way.</p>
                        <p class="mb-1.5"><span class="font-medium">Step 2.</span> Once you receive the account activation email, you can follow the link to gain access to your account info. </p>
                        <p class="mb-1.5"><span class="font-medium">Step 3.</span> If you have any questions, we're here to help! Please contact us at <a href="mailto:retail@counterculturecoffee.com" target="_blank">retail@counterculturecoffee.com</a></p>
                        <p class="mb-1.5 font-medium">Please note: if you want to place an order or are a new customer, you don't have to activate an account! Account activation is only if you want to manage subscriptions or review order info. Thanks so much!!</p>
                        
                        <div class="w-full flex justify-center">
                            <button class="btn btn-secondary"
                                    type="button"
                                    data-toggle="#login-msg">Got it!</button>
                        </div>
                    </div>
                </div>
            </div>
        {%- endif -%}
    {% endform %}

</section>
