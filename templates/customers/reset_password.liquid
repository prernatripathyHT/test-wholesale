<div id="template" class="px-5 py-12 w-full lg:w-10/12 mx-auto">
    <div class="mb-8 animate animate-fadeInUp">
      <h1 class="font-couch text-xl xs:text-2xl sm:text-4xl text-blue mb-5">Reset Account Password</h1>
      <p class="note">Enter a new password for {{ email }}</p>
    </div>

    {% form 'reset_customer_password' %}
      {{ form.errors | default_errors }}

      <div    class="flex flex-col md:flex-row items-start gap-4 md:gap-6 animate animate-fadeInUp"
              data-delay="200">

          {% render 'floating-label',
              id: 'customer_password',
              input_name: 'customer[password]',
              input_type: 'password',
              placeholder: 'C0unt3rCultur3_Rul3z',
              label: 'Password' %}

          <div class="w-full">
              {% render 'floating-label',
                  id: 'password_confirmation',
                  input_type: 'password',
                  input_name: 'customer[password_confirmation]',
                  placeholder: 'C0unt3rCultur3_Rul3z',
                  label: 'Password Confirmation' %}
          </div>

          <button type="submit"
                  name="login"
                  class="btn btn-secondary w-full md:w-1/3 animate animate-fadeInUp md:animate-fadeInRight"
                  data-delay="400">
              Reset Password
          </button>
      </div>
    {% endform %}
</div>
