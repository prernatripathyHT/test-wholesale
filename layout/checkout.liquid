<!DOCTYPE html>
<html
  lang="{{ locale }}"
  dir="{{ direction }}"
  class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}

    <link rel="stylesheet" href="https://use.typekit.net/sez6dex.css">

    {{ 'base.css' | asset_url | stylesheet_tag }}
    {{ 'tailwind.css' | asset_url | stylesheet_tag }}
  </head>
  <body id="checkout-override">
    {{ skip_to_content_link }}

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <header
          class="content__header"
          data-header
          role="banner">
          <a href="{{ shop.url }}">
            {% render 'icon'
             , icon: 'logo',
             class: 'block mx-auto mb-11 text-blue' %}
          </a>

          {{ breadcrumb }}
        </header>

        <div class="main">

          {% comment %}
          <header class="main__header" role="banner">
          {{ alternative_payment_methods }}
          </header>
          {% endcomment %}

          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>

          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>

        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>

          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}


    <script type="text/javascript" src="{{ 'checkout.js' | asset_url }}"></script>
  </body>
</html>